<Application x:Class="Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:Client.MVVM.ViewModel"
             xmlns:view="clr-namespace:Client.MVVM.View"
             xmlns:userControl="clr-namespace:Client.MVVM.UserControls"
             xmlns:local="clr-namespace:Client">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MVVM/Theme/Button/StartupButtonTheme.xaml"/>
                <ResourceDictionary Source="MVVM/Theme/Button/ConnectionStatusButtonTheme.xaml"/>
                <ResourceDictionary Source="MVVM/Theme/RectangleTabControl.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:IngameControlViewModel}">
                <userControl:IngameControl/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:PreGameControlViewModel}">
                <userControl:PreGameControl/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:PostGameControlViewModel}">
                <userControl:PostGameControl/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
